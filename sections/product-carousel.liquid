<section class="slider-section {{ section.settings.slider_class }}" {{ block.shopify_attributes }}>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto text-center">
        <h2 class="slant-title">{{ section.settings.section_title }}</h2>
      </div><!-- end .col-lg-6 -->
    </div><!-- end .row -->
    
    <div class="row">
      <div class="col-lg-12">
        
          {% assign slider_collection = section.settings.slider_collection %}
          {% assign products = collections[slider_collection].products %}
          
        
        <div class="slider-wrapper">
          
          {% for product in products %}
          
          	<div class="slide-item">
              <a href="{{ product.url }}"><img src="{{ product | img_url: '400x400' }}" alt="{{ product.title }}" class="img-fluid" /></a>
              <div class="title">{{ product.title }}</div>
              <div class="price">{{ product.price | money }}</div>

              <a href="{{ product.url }}" class="btn btn-primary">SHOP</a>

            </div><!-- end .slide-item -->
          
          {% endfor %}
          
        </div><!-- end .slider-wrapper -->
        
      </div><!-- end .col-lg-12 -->
    </div><!-- end .row -->
    
  </div><!-- end .container -->
</section>

{% schema %}
  {
    "name": "Product Slider",
	"settings": [
        {
          "type": "select",
          "id": "slider_class",
          "label": "Slider Background",
          "options": [
            {
              "value": "white",
              "label": "White"
            },
            {
              "value": "black",
              "label": "Black"
            }
          ],
          "default": "white"
        },
		{
			"id": "section_title",
			"type": "text",
			"label": "Section Title"
		},
		{
			"type": "collection",
   			"id": "slider_collection",
   			"label": "Slider Collection",
			"info": "Add the collection that you would like to populate the slider with."
		}
	],
	"presets": [
      {
        "category": "Products",
        "name": "Product Carousel"
      }
    ]
  }
{% endschema %}

